<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/img55"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foodie Food"
            android:textSize="30sp"
            android:visibility="gone"
            android:layout_marginStart="40dp"
            android:textStyle="bold" />
        <RelativeLayout
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:background="@drawable/button2"
        android:backgroundTint="#BDBBBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="177dp"
        android:layout_height="46dp"
        android:background="@drawable/button"
        android:backgroundTint="#812508"
        android:text="Ingredients"
        android:textColor="@color/white"
        android:id="@+id/ingredientBtn"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#812508"
        tools:ignore="ButtonStyle" />
    <Button
        android:layout_alignParentEnd="true"
        android:layout_width="190dp"
        android:layout_height="46dp"
        android:background="@drawable/button"
        android:backgroundTint="#812508"
        android:text="Recipe"
        android:textColor="@color/white"
        android:id="@+id/recipeBtn"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#812508"
        tools:ignore="ButtonStyle" />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <ScrollView
                android:id="@+id/scrL"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="242dp"
                        android:id="@+id/imageId"
                        android:layout_margin="5dp"
                        android:background="@drawable/button"
                        android:backgroundTint="#E8E8E8"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:id="@+id/ingredientShow"
                        android:layout_below="@+id/imageId"
                        android:orientation="vertical" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:id="@+id/recipeShow"
                        android:layout_below="@+id/imageId"
                        android:orientation="vertical" />
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
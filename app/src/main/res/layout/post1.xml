<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img55"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headerPost1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Recipe Mate"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                android:layout_margin="10sp"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@+id/headerPost1"
            android:layout_above="@+id/next"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:padding="30sp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="343dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button"
                    android:backgroundTint="#BC4C28"
                    android:id="@+id/foodName"
                    android:textColor="@color/white"
                    android:hint="Enter Food name"
                    android:textColorHint="#DDC8C1"
                    android:paddingStart="30dp"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select the category"
                    android:layout_marginTop="103dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="casual"
                    android:textSize="16sp"/>
                <Spinner
                    android:layout_width="343dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="130dp"
                    android:id="@+id/categorySpinner"
                    android:background="@drawable/button"
                    android:backgroundTint="#BC4C28"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veg"
                    android:textColor="@color/black"
                    android:layout_marginTop="180dp"
                    android:id="@+id/checkVeg"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non Veg"
                    android:layout_marginTop="180dp"
                    android:layout_marginStart="105dp"
                    android:textColor="@color/black"
                    android:id="@+id/checkNVeg"/>
                <ImageView
                    android:layout_width="345dp"
                    android:layout_height="242dp"
                    android:layout_marginTop="230dp"
                    android:src="@drawable/picbox"
                    android:backgroundTint="#E8E8E8"
                    android:id="@+id/uploadPic"/>
            </RelativeLayout>
        </ScrollView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10sp"
                android:text="Next"
                android:id="@+id/next"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FF601C"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img55"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foodie Food"
            android:id="@+id/srFood"
            android:textSize="30sp"
            android:visibility="gone"
            android:layout_marginStart="40dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/srFood"
            android:id="@+id/srLL"
            android:layout_margin="15sp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:textColor="@color/black"
                android:text="Select the Ingredients"
                android:textSize="16sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="20sp"
                    android:layout_toStartOf="@+id/RecipeAddBtn"
                    android:paddingEnd="20sp"
                    android:background="@drawable/button"
                    android:backgroundTint="#BC4C28"
                    android:id="@+id/IngredientsSearch"
                    tools:ignore="LabelFor" />
                <Button
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:backgroundTint="#812508"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:id="@+id/RecipeAddBtn"
                    app:backgroundTint="#812508" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/srLL"
            android:id="@+id/srRL"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:background="@drawable/button"
            android:backgroundTint="#BC4C28">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">
                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"
                    android:id="@+id/chipGroup"
                    android:visibility="gone"/>
            </ScrollView>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/srRL"
            android:layout_margin="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select the Category"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="casual"
                android:textStyle="bold"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:background="@drawable/button"
                android:backgroundTint="#BC4C28"
                android:id="@+id/categorySpinner2"/>
        </LinearLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginBottom="15sp"
            android:layout_marginEnd="25sp"
            android:layout_marginStart="25sp"
            android:layout_marginTop="5sp"
            android:backgroundTint="#812508"
            android:text="Search"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/RecipeSearchBtn"
            app:backgroundTint="#812508" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
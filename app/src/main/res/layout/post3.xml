<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img55"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headerPost1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Recipe Mate"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3/3"
                android:layout_margin="10sp"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headerPost12"
            android:layout_below="@+id/headerPost1">
            <LinearLayout
                    android:id="@+id/red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="5sp"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add the step"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="40dp"/>
                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:id="@+id/addStep"
                        android:src="@drawable/plus_2"
                        android:layout_marginStart="270dp"
                        android:layout_marginTop="-30dp"/>
                </LinearLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scrollview2"
            android:layout_height="wrap_content"
            android:layout_above="@+id/submitButton"
            android:layout_below="@+id/headerPost12"
            android:layout_margin="10sp">
            <LinearLayout
                    android:id="@+id/RecipeId"
                    android:layout_below="@+id/red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="5sp"
                    android:orientation="vertical" />
        </ScrollView>
        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/submitButton"
            app:spinning_bar_width="4dp"
            app:spinning_bar_color="#FFF"
            android:text="submit"
            android:textColor="@color/white"
            android:backgroundTint="#812508"
            android:layout_gravity="center_horizontal"
            app:spinning_bar_padding="6dp"
            android:background="@drawable/button"
            app:initialCornerAngle="27dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40sp"
            android:layout_marginBottom="20sp"
            android:layout_width="343dp"
            android:layout_height="51dp" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>